JAVA_HOME="<%= scope.lookupvar('crowd::javahome') %>"
JAVA_OPTS="-Xms<%= scope.lookupvar('crowd::jvm_xms') %> -Xmx<%= scope.lookupvar('crowd::jvm_xmx') %>  -XX:MaxPermSize=<%= scope.lookupvar('crowd::jvm_permgen') %> <%= scope.lookupvar('crowd::jvm_support_recommended_args') %> -Dfile.encoding=UTF-8 <%= scope.lookupvar('crowd::java_opts') %> $JAVA_OPTS"

# set the location of the pid file
if [ -z "$CATALINA_PID" ] ; then
    if [ -n "$CATALINA_BASE" ] ; then
        CATALINA_PID="$CATALINA_BASE"/work/catalina.pid
    elif [ -n "$CATALINA_HOME" ] ; then
        CATALINA_PID="$CATALINA_HOME"/work/catalina.pid
    fi
fi


export JAVA_HOME
export JAVA_OPTS
export CATALINA_PID